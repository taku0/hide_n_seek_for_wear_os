<resources>
  <style name="AppTheme" parent="android:Theme.DeviceDefault">
    <item name="android:windowAnimationStyle">@style/AppWindowAnimation</item>
  </style>

  <style name="AppWindowAnimation" parent="@android:style/Animation.Activity">
    <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
    <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
    <item name="android:activityCloseEnterAnimation">@anim/slide_in_left</item>
    <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
  </style>

  <style name="ConfigListItem" parent="android:Widget.Holo.Button.Borderless">
    <item name="android:padding">8dp</item>
    <item name="android:textSize">16sp</item>
    <item name="android:background">@color/list_item_background</item>
    <item name="android:textColor">@color/list_item_text_color</item>
    <item name="android:drawablePadding">8dp</item>
    <item name="android:textAllCaps">false</item>
    <item name="android:gravity">left|center_vertical</item>
  </style>

  <style name="ConfigComplicationBackground" parent="android:Widget.Holo.Button.Borderless">
    <item name="android:layout_width">@dimen/watch_face_preview_complication_size</item>
    <item name="android:layout_height">@dimen/watch_face_preview_complication_size</item>

    <item name="android:src">@drawable/added_complication</item>
    <item name="android:background">@android:color/transparent</item>
    <item name="android:padding">0dp</item>
  </style>

  <style name="ConfigComplicationButton" parent="android:Widget.Holo.Button.Borderless">
    <item name="android:layout_width">@dimen/watch_face_preview_complication_size</item>
    <item name="android:layout_height">@dimen/watch_face_preview_complication_size</item>
    <item name="android:background">@android:color/transparent</item>
    <item name="android:scaleType">centerInside</item>
    <item name="android:padding">@dimen/watch_face_preview_complication_padding</item>
  </style>
</resources>
